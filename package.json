{
  "name": "mtgjson-website",
  "version": "5.2.0",
  "author": "MTGJSON Developers",
  "repository": "https://github.com/mtgjson/mtgjson-website",
  "license": "MIT",
  "engines": {
    "node": "^16.16.0"
  },
  "scripts": {
    "dev": "run-p lint:js:watch local",
    "local": "npm run check-version && vitepress dev docs",
    "index": "node ./util/index-pages.js",
    "build": "npm run generate-contributors && npm run build:index && npm run generate-version-atom",
    "build:dev": "vitepress build docs",
    "build:index": "npm run index && npm run build:dev && npm run index && npm run build:dev",
    "purge": "rm -rf node_modules",
    "test": "npm run lint && jest --coverage --coverageDirectory='__coverage__'",
    "test:full": "npm run test && npm run build",
    "lint:js:watch": "esw --fix --ext .js,.vue docs/.vitepress -w",
    "lint:js": "esw --fix --ext .js,.vue docs/.vitepress",
    "lint:md": "markdownlint -c .markdownlint.jsonc docs/**/*.md",
    "lint": "npm run lint:js && npm run lint:md",
    "check-version": "node ./util/check-version.js",
    "generate-version-atom": "node ./util/generate-version-atom.js",
    "generate-contributors": "node ./util/generate-contributors.js"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "jquery": "^3.6.0",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.7",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/preset-env": "^7.16.11",
    "babel-jest": "^27.5.1",
    "cheerio": "^1.0.0-rc.12",
    "codecov": "^3.8.2",
    "eslint": "^8.11.0",
    "eslint-plugin-vue": "^8.5.0",
    "eslint-watch": "^8.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lunr": "^2.3.9",
    "markdownlint-cli": "^0.31.1",
    "npm-run-all": "^4.1.5",
    "pug": "^3.0.2",
    "pug-plain-loader": "^1.1.0",
    "sass": "^1.53.0",
    "semver": "^7.3.5",
    "uuid": "^8.3.2",
    "vite-svg-loader": "^3.4.0",
    "vitepress": "^1.0.0-alpha.4",
    "vue": "^3.2.37",
    "vue-eslint-parser": "^8.3.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
