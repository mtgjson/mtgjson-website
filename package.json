{
  "name": "mtgjson-website",
  "version": "4.5.0",
  "author": "MTGJSON Developers",
  "repository": "https://github.com/mtgjson/mtgjson-website",
  "license": "MIT",
  "engines": {
    "node": "^12.8.0",
    "npm": "^6.10.2"
  },
  "scripts": {
    "dev": "vuepress dev docs",
    "build": "vuepress build docs",
    "purge": "rm -rf node_modules",
    "bootstrap": "npm install && npm audit --fix",
    "test": "npm run lint && jest --coverage --coverageDirectory='__coverage__'",
    "test:full": "npm run test && npm run build",
    "coverage": "codecov -t CODECOV_TOKEN",
    "lint": "eslint --fix --ext .js,.vue docs/.vuepress",
    "regenerate-schema": "node ./utils/schema-regenerator.js"
  },
  "dependencies": {
    "vuepress": "^1.0.3",
    "vuepress-plugin-container": "^2.0.1",
    "vuepress-plugin-feed": "^0.1.7"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "ajv": "^6.9.1",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "codecov": "^3.5.0",
    "eslint": "^5.0.0",
    "eslint-plugin-vue": "^5.2.3",
    "husky": "^1.3.1",
    "jest": "^24.8.0",
    "node-fetch": "^2.6.0",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "vue-eslint-parser": "^6.0.4"
  }
}
