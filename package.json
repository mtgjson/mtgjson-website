{
  "name": "mtgjson-website",
  "version": "2.0.0",
  "author": "MTGJSON Developers",
  "repository": "https://github.com/mtgjson/mtgjson-website",
  "license": "MIT",
  "engines": {
    "node": "^11.9.0",
    "yarn": "^1.13.0"
  },
  "scripts": {
    "dev": "vuepress dev docs",
    "build": "vuepress build docs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:dev": "concurrently \"yarn dev\" \"yarn test:watch\"",
    "test:build": "yarn test && yarn build && yarn delete:build",
    "clean": "rm -rf node_modules && yarn cache clean",
    "delete:build": "rm -rf docs/.vuepress/dist",
    "heroku-postbuild": "yarn build"
  },
  "dependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "axios": "^0.18.0",
    "babel-jest": "^24.8.0",
    "concurrently": "^4.1.0",
    "husky": "^1.3.1",
    "jest": "^24.8.0",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "vuepress": "^1.0.2",
    "vuepress-plugin-container": "^2.0.1",
    "vuepress-plugin-feed": "^0.1.6"
  },
  "resolutions": {
    "ajv": "6.8.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test:build"
    }
  }
}
