@require './reset';
@require './custom-blocks';
@require './typography';
@require './buttons';
@require './arrow';
@require './code';

html, body {
  min-width: 320px;
  height: 100%;
}

html {
  margin-top: $navbarHeight;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-size: 16px;
  background-color: $bgColorDark;
  color: $textColor;
}

ul, ol {
  padding-left: 25px;
}

a {
  &.header-anchor {
    font-size: 0.85em;
    float: left;
    margin-left: -0.75em;
    margin-top: 0.1em;
    text-decoration: none !important;
    opacity: 0;
  }

  &, &:link {
    cursor: pointer;
    transition: 0.25s color;

    &:hover {
      transition: 0.25s color;
    }
  }

  svg {
    display: none !important;
  }
}

hr {
  border: 0;
  border-top: 1px solid $tableBorderColor;
}

img {
  user-select: none;

  &[alt='avatar'] {
    max-width: 100px !important;
    border-radius: 100%;
    float: left;
    margin-right: 30px;
  }

  &[alt='logo'] {
    max-width: 275px !important;
    margin-left: 0;
  }

  &.img-license {
    max-width: 100px;
    margin-bottom: 15px;
  }
}

.navbar {
  .search-box {
    input {
      padding: 0 0 0 35px;
      border-radius: 5px;
      color: $darkColor;
      min-width: 8rem;
    }
  }
}

.content__default {
  padding: 30px 25px 50px;

  & > *:first-child {
    padding-top: 0;
    margin-top: 0;
  }

  a {
    text-decoration: underline;

    &:hover {
      text-decoration: none;
    }
  }
}

.sidebar-group-items, .sidebar-sub-headers {
  .sidebar-link {
    &.active {
      position: relative;
      font-weight: bold;
      color: $accentColor;

      &::after {
        content: '';
        width: 5px;
        border-radius: 5px 0 0 5px;
        background-color: $accentColor;
        height: 100%;
        position: absolute;
        right: 0;
        top: 0;
      }
    }
  }
}

@media (max-width: $MQMobile) {
  .theme-container {
    &.sidebar-open {
      .sidebar {
        transform: translateX(0);
      }
    }
  }
}