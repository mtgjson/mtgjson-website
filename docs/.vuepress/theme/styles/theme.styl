@require './reset';
@require './custom-blocks';
@require './typography';
@require './wrapper';
@require './buttons';
@require './arrow';
@require './code';

:root {
  // Auxillery colors
  --yellow-color: #e3bd34;
  --green-color: lightgreen;
  --red-color: salmon;
  --orange-color: #ef6c2f;
  --gray-color: #aaaaaa;
  --light-gray-color: #f6f8fa;
  --medium-gray-color: #eaecef;
  --dark-gray-color: #2d2d2d;
  // Main theme colors
  --light-color: #ffffff;
  --dark-color: #212e3c;
  --darker-color: #1a2530;
  --darkest-color: #141c24;
  --accent-color: #61c6ed;
  --spoiler-color: #ffe774;
  // Color Themes
  --text-color: var(--light-color);
  --bg-color: var(--dark-color);
  --bg-border-color: var(--darkest-color);
  --bg-dark-color: var(--darkest-color);
  --shadow-color: var(--darkest-color);
  --blockquote-bg-color: var(--darker-color);
  --search-bg-color: var(--medium-gray-color);
  // --supporter-bg-color: var(--dark-color);
  // Data Presentation
  --table-color: var(--bg-color);
  --table-bg-color: var(--dark-color);
  --table-heading-color: var(--darker-color);
  --table-border-color: var(--dark-color);
  // Code colors
  --code-bg-color: var(--dark-gray-color);
  --code-text-color: var(--yellow-color);
}

html, body {
  min-width: 320px;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-size: 16px;
  background-color: var(--bg-dark-color);
  color: var(--text-color);

  &.light {
    // Main Color
    --accent-color: #5da0c9;
    // Color Themes
    --text-color: var(--dark-color);
    --bg-color: var(--light-color);
    --bg-border-color: var(--medium-gray-color);
    --bg-dark-color: var(--light-color);
    --shadow-color: var(--light-gray-color);
    --blockquote-bg-color: var(--light-gray-color);
    // --supporter-bg-color: var(--bg-color);
    // // Data Presentation
    --table-color: var(--text-color);
    --table-bg-color: var(--bg-color);
    --table-heading-color: var(--light-gray-color);
    --table-border-color: var(--medium-gray-color);
    // Code colors
    --code-bg-color: #ffeeec;
    --code-text-color: #9b2e2e;

    background-color: var(--bg-color);
    color: var(--text-color);
  }
}

#app {
}

ul, ol {
  padding-left: 25px;
}

a {
  &.header-anchor {
    font-size: 0.85em;
    margin-left: -0.75em;
    margin-top: 0.1em;
    text-decoration: none !important;
    opacity: 0;
    float: left;
  }

  &, &:link {
    cursor: pointer;
    transition: 0.25s color;

    &:hover {
      transition: 0.25s color;
    }
  }

  svg {
    display: none !important;
  }
}

hr {
  border: 0;
  border-top: 1px solid var(--table-border-color);
}

img {
  user-select: none;

  &[alt='avatar'] {
    max-width: 100px !important;
    border-radius: 100%;
    float: left;
    margin-right: 30px;
  }

  &[alt='logo'] {
    max-width: 275px !important;
    margin-left: 0;
  }

  &.img-license {
    max-width: 100px;
    margin-bottom: 15px;
  }
}

.search-box {
  input {
    background-color: var(--search-bg-color);
    border-color: var(--medium-gray-color);
    padding: 0 0 0 35px;
    border-radius: 5px;
    color: var(--dark-color);
    min-width: 7rem;
    // Prevent zoom on mobile with 16px. Bye bye for now.
    font-size: 12px !important;
    font-weight: bold;

    &:focus {
      border-color: var(--accent-color);
    }
  }
}

.content__default {
  @extend $wrapper;
  padding-top: 50px;

  & > * {
    max-width: $contentWidth;
  }

  & > *:first-child {
    padding-top: 0;
    margin-top: 0;
  }

  a {
    text-decoration: underline;

    &:hover {
      text-decoration: none !important;
    }
  }
}

.sidebar-group-items, .sidebar-sub-headers {
  .sidebar-link {
    &.active {
      position: relative;
      font-weight: bold;
      color: var(--accent-color);

      &::after {
        content: '';
        width: 5px;
        border-radius: 5px 0 0 5px;
        background-color: var(--accent-color);
        height: 100%;
        position: absolute;
        right: 0;
        top: 0;
      }
    }
  }
}

@media (max-width: $MQMobile) {
  .content__default {
    padding-top: 25px;
  }

  .theme-container {
    &.sidebar-open {
      .sidebar {
        transform: translateX(0);
      }
    }
  }
}