strong {
  font-weight: bold;
}

em {
  font-style: italic;
}

p {
  line-height: 1.5;
  margin-bottom: 15px;
}

small {
  font-size: 12px;
  line-height: 1.3;
}

ul, ol {
  margin-bottom: 25px;

  li {
    line-height: 1.5;
  }
}

h1, h2, h3, h4, h5, h6 {
  font-weight: bold;
  line-height: 1;

  &:hover .header-anchor {
    opacity: 1;
  }

  &:not(h1){
    & + h1,
    & + h2,
    & + h3,
    & + h4,
    & + h5,
    & + h6 {
      padding-top: 0 !important;
      margin-top: 0 !important;
    }
  }

}

h1 {
  padding-top: 25px;
  font-size: 2rem;
  padding-bottom: 25px;
}

h2 {
  padding-top: 25px;
  font-size: 1.75rem;
  padding-bottom: 25px;
}

h3 {
  padding-top: 20px;
  font-size: 1.5rem;
  padding-bottom: 20px;
}

h4 {
  padding-top: 15px;
  padding-bottom: 15px;
}

a {
  color: $accentColor;
  text-decoration: none;
}

blockquote {
  border-radius: 5px;
  font-size: 14px;
  color: $textColor;
  background-color: $tableColor;
  border-left: 0.5rem solid $tableHeadingColor;
  margin: 0 0 25px;
  padding: 25px;

  & > * {
    margin: 0;
  }
}

.code-link {
  font-weight: bold;
}