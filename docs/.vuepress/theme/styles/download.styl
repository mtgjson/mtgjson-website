.download-tables {
  position: relative;

  h3 {
    font-size: 16px;
    padding: 0 0 5px;

    &.spoiler {
      display: flex;

      &::after {
        position: relative;
        content: 'Spoiler';
        background-color: lighten($yellowColor, 85%);
        color: $bgColor;
        border-radius: 5px;
        margin-left: 10px;
        margin-right: 5px;
        font-size: 10px;
        font-weight: bold;
        padding: 3px 5px;
        display: inline-block;
        text-transform: capitalize;
      }
    }
  }

  .sorting-options {
    position: sticky;
    top: 55px;
    z-index: 9;
    padding: 15px 0;

    .sort-row {
      display: inline-block;
      margin-right: 30px;
    }

    .show-sort-row {
      display: inline-block;
    }

    select {
      display: inline;
      font-size: 16px;
      margin-left: 10px;
    }
  }

  .download-table {
    border: 1px solid $tableBorderColor;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    flex-wrap: wrap;

    &:nth-of-type(odd) {
      background-color: $tableColor;
    }

    &:nth-of-type(even) {
      background-color: $tableHeadingColor;
    }

    .download-item {
      flex: 0 0 100%;

      .download-wrap {
        padding: 15px 20px 20px;
        display: flex;
        flex-wrap: wrap;
        align-items: center;

        .img-wrap {
          flex: none;

          div {
            margin-right: 20px;
            position: relative;
            height: 50px;
            width: 50px;
            color: $textColor;

            &::before {
              position: absolute;
              text-align: center;
              line-height: 1em;
              font-size: 50px;
              width: 100%;
              height: 100%;
              transition: 0.25s color;
            }
          }
        }

        .txt-wrap {
          flex: 1;

          p {
            display: block;
            font-weight: bold;
            margin: 0;
          }

          ol {
            padding: 0;
            margin: 0;

            li {
              margin: 0;
              list-style: none;
              display: inline-block;
            }
          }

          small {
            display: inline-block;
            font-weight: bold;
            margin-right: 30px;

            span {
              font-weight: normal;
              text-transform: capitalize;

              &.type {
                text-transform: none;
              }
            }
          }
        }

        .dl-wrap {
          display: flex;
          flex: 0 0 100%;
          flex-wrap: wrap;
          margin-top: 20px;

          .cta-btn {
            background-color: $greenColor !important;
            color: $lightColor !important;
            margin-bottom: 10px;
          }

          a {
            text-decoration: none;
            margin-right: 10px;
            font-weight: bold;
            text-transform: uppercase;

            &:last-of-type {
              margin-right: 0;
            }
          }
        }
      }
    }
  }
}