.download-tables {
  max-width: 800px;
  margin-top: 20px;
  position: relative;

  h3 {
    font-size: 16px;
    line-height: 1.2em;
    margin: 0 0 10px;
  }

  .sorting-options {
    position: sticky;
    top: 55px;
    z-index: 9;
    background-color: white;
    padding: 15px 0;
    border-bottom: 1px solid $borderColor;

    .sort-row {
      display: inline-block;
      margin-right: 30px;
    }

    .show-sort-row {
      display: inline-block;
    }

    select {
      display: inline;
      font-size: 16px;
      margin-left: 10px;
    }
  }

  .download-table {
    border: 1px solid #eaecef;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    margin-top: -1px;

    &:nth-of-type(odd) {
      background-color: #f6f6f6;
    }

    &:nth-of-type(even) {
      background-color: transparent;
    }

    .download-item {
      flex: 0 0 100%;

      .download-wrap {
        padding: 15px 20px 20px;
        display: flex;
        flex-wrap: wrap;
        align-items: center;

        .img-wrap {
          flex: none;

          div {
            margin-right: 20px;
            position: relative;
            height: 50px;
            width: 50px;
            color: $codeBgColor;

            &::before {
              position: absolute;
              text-align: center;
              line-height: 1em;
              font-size: 50px;
              width: 100%;
              height: 100%;
              transition: 0.25s color;
            }
          }
        }

        .txt-wrap {
          flex: 1;

          p {
            display: block;
            font-weight: bold;
            margin: 0;
          }

          ol {
            padding: 0;
            margin: 0;

            li {
              margin: 0;
              list-style: none;
              display: inline-block;
            }
          }

          small {
            display: inline-block;
            font-weight: bold;
            margin-right: 30px;

            span {
              font-weight: normal;
              text-transform: capitalize;

              &.type {
                text-transform: none;
              }
            }
          }
        }

        .dl-wrap {
          display: flex;
          flex: 0 0 100%;
          flex-wrap: wrap;
          margin-top: 20px;

          .cta-btn {
            background-color: seagreen !important;
            margin-bottom: 10px;
          }

          a {
            text-decoration: none;
            margin-right: 10px;
            font-weight: bold;
            text-transform: uppercase;

            &:last-of-type {
              margin-right: 0;
            }
          }
        }
      }
    }
  }
}