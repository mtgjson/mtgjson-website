@require './sidebar'

h2
  border-width: 0 !important;

.code-link
  font-weight: bold
  text-transform: capitalize

img
  user-select: none;

a,
a:link
  cursor: pointer;
  transition .25s color;

  &:hover
    transition .25s color;

.page
  & > *
    max-width: 1240px !important;
    margin-left: 0 !important;

.nav-links
  .nav-item
    margin-left: 10px !important;
    transition: .25s all;

    a // generic
      background-color: darkgray;
      transition: .25s all;

    &:hover
      opacity: 0.8;
      transition: .25s all;

    &:first-of-type // Discord
      a
        background-color: #7289da;

    &:last-of-type // Donate
      a
        background-color: salmon;

.search-box
  margin-right: 0 !important;

.cta-btn,
.nav-link.external
  background-color: black;
  color: white;
  font-weight: bold;
  padding: 6px 15px
  border-radius: 2em;
  
  &:hover
    color: white;

  svg
    display: none;

img[alt='avatar']
  max-width: 100px !important;
  border-radius: 100%;
  float: left;
  margin-right: 30px;

img[alt='logo']
  max-width: 275px !important;  
  margin-left: 0;

.custom-block
  &, p
    &::before,
    &::after
      content: '';
      display: table;
      clear: both;

.page-nav
  .next,
  .prev
    a
      font-weight: bold;

      &:hover 
        text-decoration: underline;

.custom-block.tip
  border-color: $accentColor !important;

code
  background-color: $tableCodeBgColor !important;
  color: $tableCodeTextColor !important;