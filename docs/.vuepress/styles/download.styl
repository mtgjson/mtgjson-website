.download-tables
  margin-top: 20px;
  max-width: 800px;
  position: relative;
  
  h3 {
    font-size: 16px;
    line-height: 2em;
    margin: 0;
  }

  .download-table {
    border: 1px solid #eaecef;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    flex-wrap: wrap;

    &:nth-of-type(odd) {
      background-color: #f6f6f6;
    }

    &:nth-of-type(even) {
      background-color: transparent;
    }

    .download-item {
      flex: 0 0 100%;

      .download-wrap {
        padding: 20px;
        display: flex;
        flex-wrap: wrap;
        align-items: center;

        .img-wrap {
          flex: none;

          div {
            margin-right: 20px;
            position: relative;
            height: 50px;
            width: 50px;
            color: $codeBgColor;

            &::before {
              position: absolute;
              text-align: center;
              line-height: 1em;
              font-size: 50px;
              width: 100%;
              height: 100%;
              transition: 0.25s color;
            }
          }
        }

        .txt-wrap {
          flex: 1;

          p {
            display: block;
            font-weight: bold;
            margin: 0;
          }

          small {
            display: inline-block;
            font-weight: bold;
            margin-right: 30px;

            span {
              font-weight: normal;
            }
          }
        }

        .dl-wrap {
          display: flex;
          flex: 0 0 100%;
          flex-wrap: wrap;
          margin-top: 10px;
          
          .cta-btn {
            background-color: seagreen !important;
          }

          a {
            text-decoration: none;
            margin: 10px 20px 0 0;
            font-weight: bold;
            text-transform: uppercase;

            &:last-of-type {
              margin-right: 0;
            }
          }
        }
      }
    }
  }